<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="order-migration" author="brettberry">

        <createTable tableName="orderInfo">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="btTransactionId" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="createdAt" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="shippingInfoId" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="userId" type="bigint">
              <constraints nullable="false" />
            </column>
            <column name="cardLastFour" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="cardType" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="userId"
                                 baseTableName="orderInfo"
                                 referencedTableName="user"
                                 referencedColumnNames="id"
                                 constraintName="orderUserId"/>
        <addForeignKeyConstraint baseColumnNames="shippingInfoId"
                                 baseTableName="orderInfo"
                                 referencedTableName="shippingInfo"
                                 referencedColumnNames="id"
                                 constraintName="orderShippingInfoId"/>
    </changeSet>

</databaseChangeLog>
